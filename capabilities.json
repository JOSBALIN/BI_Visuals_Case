{
    "dataRoles": [
        {
            "displayName": "Measure",
            "name": "measure",
            "kind": "Measure",
            "description": "Singleton values, max 1"
        },
        {
            "displayName": "Category",
            "name": "category",
            "kind": "Grouping",
            "description": "Grouping to display"
        }
    ],
    "objects": {
        "circle": {
            "properties": {
                "circleColor": {
                    "type": {
                        "fill": {
                            "solid": {
                                "color": true
                            }
                        }
                    }
                },
                "circleThickness": {
                    "type": {
                        "numeric": true
                    }
                }                
            }
        }
    },
    "dataViewMappings": [
        {
          "conditions": [{ "measure": { "max": 1 }, "category": { "max": 1 } }],
          "categorical": {
            "categories": {
              "for": { "in": "category" }
            },
            "values": {
              "select": [{ "bind": { "to": "measure" } }]
            }
          }
        }
    ],
    "privileges": []
}
