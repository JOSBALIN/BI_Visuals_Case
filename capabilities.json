{
    "dataRoles": [
        {
            "displayName": "Measure",
            "name": "measure",
            "kind": "Measure",
            "description": "Measurement value"
        },
        {
            "displayName": "Category",
            "name": "category",
            "kind": "Grouping",
            "description": "Grouping of measurements"
        }
    ],
    "objects": {
        "circle": {
            "properties": {
                "fillColor": {
                    "type": {
                        "fill": {
                            "solid": {
                                "color": true
                            }
                        }
                    }
                },
                "circleThickness": {
                    "type": {
                        "numeric": true
                    }
                },
                "toggleLegend": {
                    "type": {
                        "bool": true
                    }
                },
                "toggleLog": {
                    "type": {
                        "bool": true
                    }
                }                
            }
        }
    },
    "dataViewMappings": [
        {
          "conditions": [{ "measure": { "max": 1 }, "category": { "max": 1 } }],
          "categorical": {
            "categories": {
              "for": { "in": "category" }
            },
            "values": {
              "select": [{ "bind": { "to": "measure" } }]
            }
          }
        }
    ],
    "privileges": []
}
